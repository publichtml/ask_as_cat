%h1= t('terms.titles.index', model_name: Lottery.model_name.human)

%table
  %thead
    %th= Lottery.human_attribute_name :name
    %th= Lottery.human_attribute_name :winners_count
    %th= Lottery.human_attribute_name :drawn
  %tbody
    - @lotteries.each do |lottery|
      %tr
        %td= link_to lottery.name, lottery_path(lottery.id)
        %td= lottery.winners_count
        %td= t("terms.choices.drawn.#{lottery.drawn? ? 'true' : 'false'}")

